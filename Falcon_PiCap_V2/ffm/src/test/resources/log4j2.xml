<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorinterval="30" status="WARN" strict="true" name="fpc" xmlns="http://logging.apache.org/log4j/2.0/config">

        <Appenders>
                <Console name="CONSOLE" target="SYSTEM_OUT">
                        <PatternLayout pattern="%16d %-5p [%c{1}:%L] (%X{name}) %m%n"/>
                </Console>
                
        </Appenders>

        <Loggers>
                <Root level="INFO" additivity="false">
                        <AppenderRef ref="CONSOLE" />
                </Root>

		<Logger name="io.github.mores" level="DEBUG" additivity="false">
                        <AppenderRef ref="CONSOLE" />
                </Logger>

		<Logger name="io.github.mores.ColorBufferWriterTest" level="WARN" additivity="false">
                        <AppenderRef ref="CONSOLE" />
                </Logger>
        </Loggers>
</Configuration>
